
@using EVP.Dominio;
@if (EVP.Security.SecurityLocal.IsAuthenticated)
{
    if (EVP.Security.SecurityLocal.Usuario is UsuarioDOM)
    {
        var Usuario = EVP.Security.SecurityLocal.Usuario as UsuarioDOM;
        if (Usuario.Tipo == "C")
        {
            //es cliente
            @Html.Partial("IndexClienteMorador")
        }
        else
        {
            Layout = null;
            //es dueño
            @Html.Partial("IndexDuenioAdministrador")
        }
    }
    else
    {
        Layout = null;
        //Es administrador
        @Html.Partial("IndexDuenioAdministrador")
    }

}
else
{
    //es morador
    @Html.Partial("IndexClienteMorador")
}
